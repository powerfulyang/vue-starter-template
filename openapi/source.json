{
  "openapi": "3.0.0",
  "info": {
    "title": "Hello API",
    "description": "API for testing hello endpoint",
    "version": "1.0.0"
  },
  "paths": {
    "/api/hello": {
      "post": {
        "summary": "Test the hello API",
        "description": "This endpoint accepts query parameters and a request body with the same structure.",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "required": false,
            "description": "The name to be sent as a query parameter",
            "schema": {
              "type": "string",
              "example": "test"
            }
          }
        ],
        "requestBody": {
          "description": "Payload to send in the body",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "The name to be sent in the request body",
                    "example": "test"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Hello, test!"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Invalid request"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
